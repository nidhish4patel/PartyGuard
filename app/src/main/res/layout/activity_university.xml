<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_university"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorGrey"
    tools:context="com.example.s525339.partygaurd_androidnachos.UniversityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"

        android:elevation="30dp"
        android:background="@color/colorlightgrey"

        android:layout_weight="20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Nearby University"
            android:id="@+id/nearUniversityTV"
            android:layout_marginLeft="10dp"
            android:paddingTop="40dp"
            android:paddingLeft="15dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@color/colorlightgrey"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:layout_weight="80">
       <ListView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:textStyle="bold"
           android:layout_weight="9"
           android:layout_below="@id/nearUniversityTV"
           android:background="@color/colordarkgrey"
           android:id="@+id/universityLV" />
   </LinearLayout>

</LinearLayout>
