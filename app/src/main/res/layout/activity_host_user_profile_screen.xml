<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.50"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="#696969"
        android:backgroundTintMode="screen"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorWhite"
                android:src="@mipmap/user"
                android:layout_height="match_parent"
                android:id="@+id/profileImageView"
                android:onClick="imageUpload" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="60"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:inputType="text"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/profileFirstNameET"
                    android:hint="First Name"
                    android:background="@android:drawable/editbox_background" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:inputType="text"
                    android:textColorHint="@color/colordarkgrey"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/profileLastNameET"
                    android:hint="Last Name"
                    android:background="@android:drawable/editbox_background" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="65"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/profileEmailET"
                android:hint="Email Address"
                android:background="@android:drawable/editbox_background" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:inputType="phone"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/profileContactET"
                android:hint="Contact"
                android:background="@android:drawable/editbox_background" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:inputType="date"
                android:textColorHint="@color/colordarkgrey"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/profileDOBET"
                android:hint="Date of Birth"
                android:background="@android:drawable/editbox_background" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center">
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="Edit"
                android:id="@+id/profileEditBtn"
                android:background="@drawable/profile_rounded_button"
                android:layout_centerVertical = "true"
                android:layout_centerHorizontal = "true"
                />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="Save"
                android:id="@+id/profileSaveBtn"
                android:background="@drawable/profile_rounded_button"
                android:layout_centerVertical = "true"
                android:layout_centerHorizontal = "true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="LogOut"
                android:id="@+id/logOutBtn"
                android:background="@drawable/profile_rounded_button"
                android:layout_centerVertical = "true"
                android:layout_centerHorizontal = "true"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:gravity="bottom">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pgTeamTabBTN"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:background="@color/colorCrimson"
            android:clickable="true"
            android:scaleType="fitXY"
            android:text="PG Team"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/group"
            android:paddingTop="12dp"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/alertTabBTN"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:scaleType="fitXY"
            android:text="Alert"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/alert"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:clickable="true"
            android:id="@+id/historyTabBTN"
            android:scaleType="fitXY"
            android:text="History"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/history"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:clickable="true"
            android:id="@+id/profileTabBTN"
            android:scaleType="fitXY"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/profile"
            />
    </LinearLayout>
</LinearLayout>







