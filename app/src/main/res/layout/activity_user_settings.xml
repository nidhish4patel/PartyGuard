<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPastalGrey"
    tools:context="com.example.s525339.partygaurd_androidnachos.UserSettings">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:layout_gravity="center"
        android:layout_weight="30">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Password"
            android:gravity="bottom"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:paddingLeft="30dp"
            android:text="Email Id:"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:layout_marginLeft="0dp"
            android:id="@+id/emailId"
            android:inputType="text"
            android:background="@drawable/rounded_button3"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:paddingLeft="30dp"
            android:textColor="@color/colorBlack"
            android:text="New Password:"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/newPassword"
            android:layout_marginRight="25dp"
            android:inputType="textPassword"
            android:background="@drawable/rounded_button3"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:paddingLeft="30dp"
            android:textColor="@color/colorBlack"
            android:text="Confirm Password:"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/reEnterPassword"
            android:inputType="textPassword"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_button3"
            android:textSize="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="Edit"
            android:id="@+id/profileEditBtn"
            android:background="@drawable/profile_rounded_button"
            android:layout_alignTop="@+id/profileSaveBtn"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="Save"
            android:id="@+id/profileSaveBtn"
            android:background="@drawable/profile_rounded_button"
            android:layout_alignStart="@+id/profileEditBtn" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:id="@+id/view2"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitBTN"
        android:text="Logout"
        android:background="@drawable/profile_rounded_button"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="45dp"/>

</LinearLayout>

