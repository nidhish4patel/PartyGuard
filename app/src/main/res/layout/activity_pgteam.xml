<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/colors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

   <GridView

       xmlns:android="http://schemas.android.com/apk/res/android"

       android:id="@+id/gird_view"
       android:background="@color/colorgrey"
       android:numColumns="3"
       android:horizontalSpacing="1dp"
       android:verticalSpacing="1dp"
       android:columnWidth="125dp"
       android:stretchMode="columnWidth"
       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="4.50"
       android:layout_marginTop="15dp">

   </GridView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.60"
       android:gravity="bottom">
      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_centerVertical="true"
          android:background="@color/colorCrimson"
          android:clickable="true"
          android:scaleType="fitXY"
          android:id="@+id/pgTeamTabBTN"
          android:text="PG Team"
          android:textColor="#FFFFFF"
          android:drawableTop="@drawable/group"
          android:paddingTop="12dp"

          />

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:clickable="true"
          android:background="@color/colorCrimson"
          android:paddingTop="12dp"
          android:scaleType="fitXY"
          android:id="@+id/alertTabBTN"
          android:text="Alert"
          android:textColor="#FFFFFF"
          android:drawableTop="@drawable/alert"
          />

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/colorCrimson"
          android:paddingTop="12dp"
          android:clickable="true"
          android:scaleType="fitXY"
          android:id="@+id/historyTabBTN"
          android:text="History"
          android:textColor="#FFFFFF"
          android:drawableTop="@drawable/history"
          />

      <Button
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@color/colorCrimson"
          android:paddingTop="12dp"
          android:clickable="true"
          android:id="@+id/profileTabBTN"
          android:scaleType="fitXY"
          android:text="Profile"
          android:textColor="#FFFFFF"
          android:drawableTop="@drawable/profile"
          />
   </LinearLayout>
</LinearLayout>