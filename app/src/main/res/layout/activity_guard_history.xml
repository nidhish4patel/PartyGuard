<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/colors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.50"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorGrey"
        tools:context="com.example.s525339.partygaurd_androidnachos.FraternitiesActivity">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alertListView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:gravity="bottom">


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/guardAlertTabBTN"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:scaleType="fitXY"
            android:text="Alert"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/alert"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:clickable="true"
            android:id="@+id/guardHistoryTabBTN"
            android:scaleType="fitXY"
            android:text="History"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/history"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:id="@+id/guardProfileTabBTN"
            android:clickable="true"
            android:scaleType="fitXY"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/profile"
            />
    </LinearLayout>
</LinearLayout>


