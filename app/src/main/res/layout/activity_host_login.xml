<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.example.s525339.partygaurd_androidnachos.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:text="Party"
            android:id="@+id/titleTV"
            android:gravity="center"
            android:layout_marginLeft="110dp"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Guard"
            android:id="@+id/title1TV"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/titleTV"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:inputType="textPersonName"
            android:hint="Email"
            android:textColorHint="#FFFFFF"
            android:ems="12"
            android:id="@+id/hostEmailET"
            android:layout_below="@+id/titleTV"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="12"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:id="@+id/hostPasswordET"
            android:layout_below="@+id/hostEmailET"
            android:layout_alignStart="@+id/hostEmailET" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Login"
            android:id="@+id/hostLoginBtn"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/hostPasswordET"
            android:layout_alignStart="@+id/hostPasswordET"
            android:layout_alignEnd="@+id/hostPasswordET"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Your Password?"
            android:textSize="16sp"
            android:id="@+id/hostForgotPasswordTV"
            android:textColor="@color/orange"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:id="@+id/view2"
            android:layout_below="@+id/fbBtn"
            android:layout_marginTop="240dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don&apos;t have an Account?"
            android:id="@+id/hostNoAccountTV"
            android:textColor="@color/orange"
            android:layout_marginTop="265dp"
            android:textSize="16sp"

            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Create Account"
            android:id="@+id/hostCreatAccountBtn"
            android:background="@drawable/rounded2_button"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</LinearLayout>
