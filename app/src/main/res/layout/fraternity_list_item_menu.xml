<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="0dp"
    android:background="@color/colorGrey">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3.5">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:id="@+id/fraternityListIV"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id = "@+id/upperTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/fraternityListIV"
            />
        <TextView
            android:id = "@+id/lowerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upperTV"
            android:layout_toRightOf="@id/fraternityListIV"

            android:textSize="25dp"
            android:layout_marginBottom="15dp"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <!--<ImageView-->
        <!--android:id="@+id/listArrowButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/listarrow_icon"-->
        <!--android:contentDescription="icon"-->
        <!--style="?android:attr/borderlessButtonStyle"/>-->

    </RelativeLayout>
</LinearLayout>