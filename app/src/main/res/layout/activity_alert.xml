<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/colors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.50"
        android:background="@color/colorlightgrey"

        tools:context="com.example.s525339.partygaurd_androidnachos.FraternitiesActivity">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alertListView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:gravity="bottom">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:background="@color/colorCrimson"
            android:id="@+id/pgTeamTabBTN"
            android:clickable="true"
            android:scaleType="fitXY"
            android:text="PG Team"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/group"
            android:paddingTop="12dp"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@color/colorCrimson"
            android:id="@+id/alertTabBTN"
            android:paddingTop="12dp"
            android:scaleType="fitXY"
            android:text="Alert"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/alert"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:id="@+id/historyTabBTN"
            android:text="History"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/history"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCrimson"
            android:paddingTop="12dp"
            android:id="@+id/profileTabBTN"
            android:clickable="true"
            android:scaleType="fitXY"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/profile"
            />
    </LinearLayout>
</LinearLayout>




